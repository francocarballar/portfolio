---
import social from '@config/social.json'
import ArrowTop from '@icons/ArrowTop.astro'

const currentYear = new Date().getFullYear()
---

<footer
  class='mt-10 flex w-full max-w-3xl flex-col items-center justify-start gap-6 border-0 border-t-2 border-gray-700 pt-3'>
  <a href='#home' class='flex w-auto flex-col items-center justify-center'>
    <ArrowTop />
    <h3 class='text-2xl font-bold'>Volver arriba</h3>
  </a>

  <div class='flex w-full flex-col items-center justify-center gap-2 text-center'>
    <p>&copy; {currentYear} creado por Franco Carballar</p>
    <ul class='m-0 flex list-none flex-row items-center justify-center gap-3' data-justify='end'>
      {
        social?.networks.map(({ url, name }) => (
          <li>
            <a href={url} class='text-base text-white hover:underline' target='_blank'>
              {name}
            </a>
          </li>
        ))
      }
    </ul>
  </div>
</footer>
