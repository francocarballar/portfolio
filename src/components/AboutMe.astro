---
import CTA from './CTA.astro'

interface Props {
  title: string
  subtitle: string
  profile_picture: string
  img_alt: string
  cv: string
}

const { title, subtitle, profile_picture, img_alt, cv } = Astro.props
---

<section
  id='home'
  class='mx-auto flex min-h-fit w-full max-w-3xl flex-col items-center justify-start gap-8 sm:flex-row sm:items-start sm:gap-10'>
  <div class='flex h-auto w-full flex-col items-center justify-start gap-2 sm:hidden sm:items-start'>
    <h1
      class='bg-gradient-to-r from-primary to-secondary bg-clip-text text-2xl font-bold text-transparent sm:text-4xl lg:text-5xl'>
      {title}
    </h1>
    <h2 class='text-start text-lg font-bold text-white sm:text-2xl lg:text-3xl'>
      {subtitle}
    </h2>
  </div>

  <img
    src={profile_picture}
    alt={img_alt}
    class='order-2 h-auto w-full max-w-[250px] rounded-3xl object-cover object-center'
  />

  <div class='order-3 flex flex-col items-start justify-start gap-3 text-start text-base sm:hidden'>
    <slot />
  </div>

  <div class='order-4 mt-3 w-full sm:hidden'>
    <CTA link={cv} text='Curriculum Vitae' />
  </div>

  <div class='hidden h-auto w-full flex-col items-start justify-start gap-5 sm:flex'>
    <div class='flex h-auto w-full flex-col items-center justify-start gap-2 sm:items-start'>
      <h1
        class='bg-gradient-to-r from-primary to-secondary bg-clip-text text-2xl font-bold text-transparent sm:text-4xl lg:text-5xl'>
        {title}
      </h1>
      <h2 class='text-start text-lg font-bold text-white sm:text-2xl lg:text-3xl'>
        {subtitle}
      </h2>
    </div>
    <div class='flex flex-col items-start justify-start gap-3 text-start text-base'>
      <slot />
    </div>
    <div class='mt-5 w-full max-w-[300px]'>
      <CTA link={cv} text='Curriculum Vitae' />
    </div>
  </div>
</section>
